<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">




<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 >

 <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="6dp"

        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/teams_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:gravity="start|center"
                    android:textColor="@color/black" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/teams_name"
                    android:background="@color/black" />



            </RelativeLayout>



            <LinearLayout
                android:id="@+id/teams_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_50dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/relay"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/team_a"

                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:layout_marginStart="5dp"
                        android:text="Team A" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_below="@+id/team_a">



                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/semi_circular_team_a"/>

                        </RelativeLayout>

                        <com.onecricket.ui.CircularTextView
                            android:id="@+id/circular_team_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:padding="6dp"
                            android:text="K"
                            android:visibility="gone"
                            android:textSize="28sp" />



                    </RelativeLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/match_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/timer"
                        android:text="Upcoming"
                        android:textAlignment="center"
                        android:drawablePadding="5dp"
                        android:textColor="@color/btn_txt_color"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/team_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:text="Team B" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="0dp"
                        android:layout_below="@+id/team_b">




                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>
        <TextView
            android:id="@+id/create_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teams_layout"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_5dp"
            android:layout_gravity="end"
            android:paddingRight="@dimen/dimen_10dp"
            android:textColor="@color/btn_txt_color"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/shake_hands" />


        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play with Friends"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_10dp"
            android:layout_below="@+id/relay"
            android:background="@color/color_5"
            android:textColor="@color/btn_txt_color"
            android:layout_gravity="bottom"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/sharing"
           />




    </androidx.cardview.widget.CardView>
</RelativeLayout>


</layout>